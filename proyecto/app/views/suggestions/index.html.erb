<p id="notice"><%= notice %></p>


<div class ="row">
  <div class="col-md-6">
    <h1>Suggestions</h1>
<%= link_to 'View All', suggestions_path, class: 'navbar-brand' %>
</div>
<div class= "col-md-6 putright">


<div class="search-bar">
  <%= form_tag(suggestions_url, :method => "get", id: "search-form") do %>
      <%= select_tag :search, options_for_select([Suggestion::STATUS_OPTIONS[0], Suggestion::STATUS_OPTIONS[1], Suggestion::STATUS_OPTIONS[2]]) %>
      <%= submit_tag "Search", :name => nil, :class => 'btn btn-default btn-sm' %>
  <% end %>
</div>

</div>

<table class = "table table-bordered table-hover">
  <thead>
    <tr>
      <th>Document</th>
      <th>Person</th>
      <th>Text</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= suggestion.document %></td>
        <td><%= suggestion.person %></td>
        <td><%= suggestion.text %></td>
        <td><%= suggestion.status %></td>
        <td><%= link_to 'Show', suggestion %></td>
        <td><%= link_to 'Edit', edit_suggestion_path(suggestion) %></td>
        <td><%= link_to 'Destroy', suggestion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suggestion', new_suggestion_path %>
