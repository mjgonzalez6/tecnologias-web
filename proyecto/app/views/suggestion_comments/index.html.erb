<p id="notice"><%= notice %></p>

<h1>Suggestion Comments</h1>

<table>
  <thead>
    <tr>
      <th>Suggestion</th>
      <th>User</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggestion_comments.each do |suggestion_comment| %>
      <tr>
        <td><%= suggestion_comment.suggestion %></td>
        <td><%= suggestion_comment.user %></td>
        <td><%= suggestion_comment.text %></td>
        <td><%= link_to 'Show', suggestion_comment %></td>
        <td><%= link_to 'Edit', edit_suggestion_comment_path(suggestion_comment) %></td>
        <td><%= link_to 'Destroy', suggestion_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suggestion Comment', new_suggestion_comment_path %>
