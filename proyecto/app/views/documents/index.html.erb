<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table class = "table table-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Es publico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>


        <td><%= document.title %></td>
        <td><%= document.text %></td>
        <td><%= document.is_public%></td>
        <td><%= link_to 'Show', document%></td>
        <%if person_signed_in? %>
        <td><%= link_to 'Edit', edit_document_path(document)  %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if person_signed_in? %>

  <%= link_to 'New Document', new_document_path, class: "btn btn-primary" %>
<% end %>
