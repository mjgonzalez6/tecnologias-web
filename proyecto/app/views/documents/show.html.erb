<p id="notice"><%= notice %></p>

<table>
  <thead class = "text">
<div class="col-md-6">
  <h1>Documents</h1>
<div class="panel panel-default">
  <div class="panel-heading">Title: <%= @document.title %></div>
  <div class="panel-body"><%= @document.text %></div>
</div>

</thead>
<thead>
<div class="col-md-6">
  <h1>Markdown</h1>
  <div class="panel panel-default">
    <div class="panel-heading">Title: <%= @document.title %></div>
    <div class="panel-body"><%= markdown(@document.text) %></div>
  </div>
</div>
</thead>
</table>


<%if person_signed_in? %>
<%= link_to 'Edit', edit_document_path(@document) , class: "btn btn-primary" %>
<% end %>
<%= link_to 'Back', documents_path, class: "btn btn-danger"  %>
</div>
